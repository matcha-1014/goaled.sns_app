<div class="posts-wrapper">
  <div class="posts-container">
    <h2 class="page-title">投稿一覧</h2>
    <div class="posts-index-box">
      <ul>
        <% @posts.each do |post| %>
        <li class="posts-index-text"><%= link_to(post.content, "/posts/#{post.id}/show") %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>